<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taptwisttunes.GyroscopeTest" >

    <Button
        android:id="@+id/btStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TempoSlider"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Start" />

    <SeekBar
        android:id="@+id/TempoSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btStop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:progress="50" />

    <Button
        android:id="@+id/btStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btStart"
        android:layout_alignBottom="@+id/btStart"
        android:layout_centerHorizontal="true"
        android:text="Stop" />

    <TextView
        android:id="@+id/seekBarProgressDelta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TempoSlider"
        android:layout_alignRight="@+id/TempoSlider"
        android:layout_below="@+id/TempoSlider"
        android:layout_marginTop="42dp"
        android:text="SeekbarProgress" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBarProgressDelta"
        android:layout_centerVertical="true"
        android:text="Gyroscope Position" />

    <Button
        android:id="@+id/btListen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btStop"
        android:layout_alignRight="@+id/TempoSlider"
        android:text="Listen" />

</RelativeLayout>
