<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="1">
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".05"
        android:weightSum="1">
        
        <TextView
 		  android:id="@+id/space"
 		  android:layout_width="wrap_content"
 		  android:layout_height="match_parent"
 		  android:background="@drawable/blue_background"
 		  android:layout_weight=".05" />
        
        <TextView
            android:id="@+id/songTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".85"
            android:background="@drawable/blue_background"
            android:gravity="center_vertical"
            android:text="Waiting for Song"
            android:textColor="#ECF0F1"
            android:textSize="20dp"
            android:textStyle="bold" />
        
        <ImageButton
 		     android:id="@+id/upload"
 		     android:layout_width="wrap_content"
 		     android:layout_height="match_parent"
 		     android:layout_weight=".1"
 		     android:background="@drawable/blue_background"
 		     android:src="@raw/ic_action_upload" />
    
    </LinearLayout>
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".225"
        android:weightSum="1">

        <ImageButton
 		        android:id="@+id/stop"
 		        android:layout_width="wrap_content"
 		        android:layout_height="match_parent"
 		        android:layout_weight=".5"
 		        android:background="#FEE668"
 		        android:src="@raw/ic_action_stop" />
 		    
 		    <ImageButton
 		        android:id="@+id/bRefresh"
 		        android:layout_width="wrap_content"
 		        android:layout_height="match_parent"
 		        android:layout_weight=".5"
 		       	android:background="#FEE668"
 		    	android:src="@raw/ic_action_refresh" />
    
    </LinearLayout>
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".225"
        android:weightSum="1">

        <Button
                   android:id="@+id/bPitchUp"
                   android:layout_width="wrap_content"
 		           android:layout_height="match_parent"
 		           android:background="#FEE668"
 		           android:layout_weight=".5" 
 		           android:textColor="#2DCC71"
 		           android:textSize="50dp"
 	               android:text="+"
                   android:textStyle="bold" />
   	            
   	            <Button
                  android:id="@+id/bPitchDown"
                  android:layout_width="wrap_content"
 		          android:layout_height="match_parent"
 		          android:background="#FEE668"
 		          android:layout_weight=".5" 
 		          android:textColor="#E74C3C"
 		          android:textSize="50dp"
 	              android:text="-"
        		  android:textStyle="bold" />
    
    </LinearLayout>
    
      	        <Button
                  android:id="@+id/bTone"
                  android:layout_width="match_parent"
 		          android:layout_height="wrap_content"
 		          android:background="@drawable/green_background"
 		          android:layout_weight=".25" 
 		          android:textColor="#ECF0F1"
 	              android:text="Tone"
 	              android:textSize="32dp"
                  android:textStyle="bold" />
   	        
   	        <Button
                  android:id="@+id/bBPM"
                  android:layout_width="match_parent"
 		          android:layout_height="wrap_content"
 		          android:background="@drawable/red_background"
 		          android:layout_weight=".25" 
 		          android:textColor="#ECF0F1"
 	              android:text="BPM"
 	              android:textSize="32dp"
                  android:textStyle="bold"  />
      
</LinearLayout>